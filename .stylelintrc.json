{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-html"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/properties-order": [
      {
        "groupName": "Positioning",
        "properties": [
          "position",
          "top",
          "right",
          "bottom",
          "left",
          "z-index"
        ]
      },
      {
        "groupName": "Box Model",
        "properties": [
          "display",
          "float",
          "width",
          "height",
          "max-width",
          "max-height",
          "min-width",
          "min-height",
          "padding",
          "padding-top",
          "padding-right",
          "padding-bottom",
          "padding-left",
          "margin",
          "margin-top",
          "margin-right",
          "margin-bottom",
          "margin-left"
        ]
      },
      {
        "groupName": "Border",
        "properties": [
          "border",
          "border-style",
          "border-width",
          "border-color",
          "border-radius"
        ]
      },
      {
        "groupName": "Background",
        "properties": [
          "background",
          "background-color",
          "background-image",
          "background-repeat",
          "background-attachment",
          "background-position",
          "background-size"
        ]
      },
      {
        "groupName": "Typography",
        "properties": [
          "color",
          "font",
          "font-family",
          "font-size",
          "font-weight",
          "font-style",
          "line-height",
          "text-align",
          "text-justify",
          "text-indent",
          "text-overflow",
          "text-decoration",
          "white-space",
          "vertical-align"
        ]
      },
      {
        "groupName": "Visual",
        "properties": [
          "cursor",
          "opacity",
          "transform",
          "transition"
        ]
      }
    ],
    "selector-type-no-unknown": [
      true,
      {
        "ignoreTypes": ["page"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.vue"],
      "customSyntax": "postcss-html"
    }
  ]
}
